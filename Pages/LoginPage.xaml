<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:PROJECT.ViewModels"
             x:Class="PROJECT.Pages.LoginPage"
             x:DataType="vm:LoginViewModel"
             Title="Login"
             BackgroundColor="#F2EFE9">

    <ScrollView>
        <VerticalStackLayout Padding="30,60" Spacing="15">

            <Image x:Name="LogoImage"
                   Source="logo.png"
                   HeightRequest="70"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Image x:Name="HeroImage"
                   Source="journal.png"
                   HeightRequest="180"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Label Text="Welcome Back!"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#39413F"
                   HorizontalOptions="Center" />

            <Label Text="Login"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="#39413F"
                   HorizontalOptions="Center"
                   Margin="0,-10,0,20"/>

            <Entry Placeholder="Username, Email or Phone Number"
                   Text="{Binding EmailOrPhone}"
                   FontSize="14"
                   HeightRequest="45"
                   BackgroundColor="Transparent"
                   TextColor="#253F33"
                   PlaceholderColor="#A0A0A0"
                   Margin="0,5,0,0"/>

            <Grid ColumnDefinitions="*, Auto" Margin="0,5,0,0">
                <Entry Grid.Column="0"
           Placeholder="Password"
           IsPassword="{Binding IsPasswordHidden}"
           Text="{Binding Password}"
           FontSize="14"
           HeightRequest="45"
           BackgroundColor="Transparent"
           TextColor="#253F33"
           PlaceholderColor="#A0A0A0"/>

                <ImageButton Grid.Column="1"
                 Source="icon_eye.svg"
                 Command="{Binding TogglePasswordCommand}"
                 HeightRequest="24"
                 WidthRequest="24"
                 VerticalOptions="Center"
                 Margin="0,0,5,0">
                    <ImageButton.Triggers>
                        <DataTrigger TargetType="ImageButton" Binding="{Binding IsPasswordHidden}" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </DataTrigger>
                    </ImageButton.Triggers>
                </ImageButton>
            </Grid>

            <Grid ColumnDefinitions="Auto,*,Auto" Margin="0,5,0,0">
                <HorizontalStackLayout Grid.Column="0" Spacing="5">
                    <CheckBox IsChecked="{Binding RememberMe}" Color="#253F33" />
                    <Label Text="Remember Me"
                           VerticalOptions="Center"
                           FontSize="13"
                           TextColor="#39413F"/>
                </HorizontalStackLayout>

                <Label Grid.Column="2"
                       Text="Forgot Password ?"
                       TextColor="#253F33"
                       FontAttributes="Bold"
                       FontSize="13"
                       VerticalOptions="Center"
                       HorizontalOptions="End">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ForgotPasswordCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>

            <Button Text="Log In"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#253F33"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20,0,0"/>

            <HorizontalStackLayout HorizontalOptions="Center" Margin="0,10,0,0" Spacing="5">
                <Label Text="Donâ€™t have an account?"
                       TextColor="#39413F"
                       FontSize="13" />
                <Label Text="Sign Up"
                       TextColor="#253F33"
                       FontAttributes="Bold"
                       FontSize="13">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SignUpNavigateCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
